---
import Arrow from "../components/Arrow.astro";
import HeaderSection from "../components/HeaderSection.astro";
import { useT } from "../i18n/utils";

const t = useT()

const EXPERIENCE = [
    {
        lugar: "Riviera",
        puesto: "experience.exp-1.rol",
		  tiempo: "experience.exp-1.time",
        descripcion: "experience.exp-1.description"
	},
    {
        lugar: "Espol (MIDI)",
        puesto: "experience.exp-2.rol",
		  tiempo: "experience.exp-2.time",
        descripcion: "experience.exp-2.description"
	},{
		lugar: "Solinal",
		puesto: "experience.exp-3.rol",
		tiempo: "experience.exp-3.time",
		descripcion: "experience.exp-3.description"
	}
]

---

<section id = "experience" class = "max-w-6xl mx-auto my-20 text-content">
	<Arrow color="gold"/>
	<div class = "flex flex-col items-center justify-center">
		<HeaderSection title = "experience.title"/>
		<div class="flex flex-wrap justify-center w-full gap-5 mt-10">
			{EXPERIENCE.reverse().map(({lugar, puesto, tiempo, descripcion}) => (
				<article class = "bg-background flex flex-col min-h-[312px] items-center border-2 border-neon rounded-[25px]
					hover:scale-105 hover:bg-hover transition w-[80%] md:w-[45%] lg:w-[31%] font-content
					animate-fade-in-right timeline-view animate-range-[15%_35%]">
					<div class="border-b-2 border-neon h-[25%] w-full flex flex-col justify-center items-center py-4">
						<h1 class = "font-bold text-neon text-[24px]">{lugar}</h1>
						<h2 class = "text-[16px]" data-translate={puesto}>{t(puesto as keyof typeof t)}</h2>
						<small class = "text-[12px] opacity-75" data-translate={tiempo}>{t(tiempo as keyof typeof t)}</small>
					</div>
					<div class = "p-4 leading-normal min-h-[60px]">
						<span class = "text-center text-[14px]" data-translate={descripcion}>{t(descripcion as keyof typeof t)}</span>
					</div>
				</article>
			))}
		</div>
	</div>
</section>