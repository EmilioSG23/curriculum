---
import { useT } from "@/i18n/utils";

const t = useT();
const { lugar, puesto, tiempo, descripcion, className = "", dataIndex } = Astro.props;
---

<div class="w-full flex gap-x-8" data-aos="fade-right">
	<div class="flex flex-col items-center gap-y-4 my-6">
		<div class="size-6 rounded-full border-2 border-neon"></div>
		<div class="w-0.5 flex-1 bg-neon/50"></div>
	</div>
	<div class={`experience-item flex-1 ${className}`} data-index={dataIndex}>
		<article
			class="bg-background flex flex-col items-center rounded-lg border border-neon
					hover:bg-hover transition font-content h-full gap-y-4 py-4 px-6"
		>
			<div class="w-full flex flex-col">
				<h1 class="font-bold text-neon text-[24px]">{lugar}</h1>
				<h2 class="text-[20px] font-bold" data-translate={puesto}>
					{t(puesto as keyof typeof t)}
				</h2>
				<small class="text-[16px] opacity-75" data-translate={tiempo}
					>{t(tiempo as keyof typeof t)}</small
				>
			</div>
			<div class="leading-normal w-full">
				<span class="text-[14px]" data-translate={descripcion}
					>{t(descripcion as keyof typeof t)}</span
				>
			</div>
		</article>
	</div>
</div>
