---
const SOCIAL_MEDIA = [
	{
		name: "GitHub",
		url: "https://github.com/EmilioSG23",
		icon: "github",
	},
	{
		name: "GitLab",
		url: "https://gitlab.com/EmilioSG23",
		icon: "gitlab",
	},
	{
		name: "LinkedIn",
		url: "https://www.linkedin.com/in/emilio-s%C3%A1enz-g%C3%B3mez-4205b02b9/",
		icon: "linkedin",
	},
];

const year = new Date().getFullYear();
---

<footer class="bg-gray-800 text-white font-main border-t-2 border-t-gold py-5">
	<div
		class="mx-auto container py-2 grid grid-cols-1 md:grid-cols-3 md:flex-row justify-between items-center"
	>
		<div class="order-2 md:order-1 mt-5 md:mt-0 flex-1 text-center font-extralight text-[14px]">
			Copyright &copy; Emilio Ignacio <b>Sáenz Gómez</b>
			{year}
		</div>
		<div class="order-1 md:order-2 flex-1 text-center">
			{
				SOCIAL_MEDIA.map(({ name, url, icon }) => (
					<a
						href={url}
						aria-label={name}
						target="_blank"
						role="tooltip"
						class="relative group inline-block text-4xl bg-gray-300 text-black hover:brightness-150 transition p-2 rounded-2xl mx-1"
					>
						<i
							class:list={{
								"w-10 h-10": true,
								[`fab fa-${icon}`]: true,
							}}
						/>
						<span
							class="absolute left-1/2 -translate-x-1/2 -top-8 
								bg-white text-black text-xs font-bold 
								py-1 px-2 rounded opacity-0 group-hover:opacity-100 transition pointer-events-none"
						>
							{name}
						</span>
						<span
							class="absolute left-1/2 -translate-x-1/2 -top-2 w-0 h-0 
								border-l-[8px] border-l-transparent 
								border-r-[8px] border-r-transparent 
								border-t-[10px] border-t-white 
								opacity-0 pointer-events-none group-hover:opacity-100 transition"
						/>
					</a>
				))
			}
		</div>
	</div>
</footer>
