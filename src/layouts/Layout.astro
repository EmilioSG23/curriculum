---
import Background from "@/shared/components/Background.astro";
import Footer from "@/shared/components/Footer.astro";
import Header from "@/shared/components/Header.astro";
import { ClientRouter } from "astro:transitions";

import "@/styles/global.css";
---

<!doctype html>
<html lang="es" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portafolio Web - Emilio SÃ¡enz</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
		/>
		<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
		<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
		<script>
			import AOS from "aos";
			AOS.init({ duration: 600, offset: 200 });
		</script>
		<ClientRouter />
	</head>
	<body class="transition">
		<Background />
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Just+Another+Hand&display=swap");
	html {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
