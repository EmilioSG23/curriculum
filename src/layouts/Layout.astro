<style>
	@import '@fortawesome/fontawesome-free/css/all.min.css';
	@tailwind base;
	@tailwind components;
	@layer base{
		:root{
			--color-primary: #00245a;
			--color-gold: #ffc800;
			--color-background: white;
			--color-content: #000000;
			--color-neon: #000823;
			--color-hover: #c2edf7;
		}
		.dark{
			--color-background: #000823; 
			--color-content: #ffffff;
			--color-neon: #5AE1FF;
			--color-hover: #0d152e;
		}
	}	
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
